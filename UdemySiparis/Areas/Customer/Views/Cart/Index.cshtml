
@model UdemySiparis.Models.ViewModels.CartVM
  <form mwthod="post">
<div class="row">
    <div clas="col-lg-8 m-0">
        @foreach (var item in Model.ListCart)
            {
                <div class="card  p-0 mb-1">
                <div class="card-header bg-primary text-Light m-0 p-0 row">
                    <div class="col-12 col-md-6">
                        <h6 class="text-white mt-2"> @item.Product.Name </h6>
                    </div>
           
                </div>
                <div class="card body ">
                    <div class="rounded pb-2">
                        <div class="row">
                            <div class="col-12 col-lg-3 text-conter" style="border-right:1px solid #0066cc; ">
                                <img src="@item.Product.Picture" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8 align-self-center">
                                <div class="row">
                                    <div class="col-lg-4 m-0">
                                       @item.Product.Name
                                    </div>

                                    <div class="col-lg-4">
                                        <span> <a asp-action="Decrease" asp-route-cartId="@item.Id" class="btn btn-danger mx-2"> - </a> <span> @item.Count </span> <span> <a asp-action="Increase" asp-route-cartId="@item.Id" class="btn btn-primary mx-2"> + </a> </span> </span>
                                    </div>
                                    <div classs="col-lg-4 m-0">
                                        <span> TOTAL :@item.Price.ToString("c") </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            }
    </div>



    <div class="col-lg-3">
        <div class="card container p-0">
            <div class="card-header bg-primary text-Light m-0 p-0 row">
                <div class="col-12 col-md-6">
                    <span class="text-white mt-1"> ORDER SUMMARY </span>
                </div>
            </div>
            <div class="card-body container ">
                <div class="container rounded pb-2">
                    <div class="row">

                        <div class="col-12 col-lg-12 align-self-center">
                            <div class="row">
                                <div class="col-lg-12 at-2">
                                    <span> AMOUNT : </span> <span> @Model.OrderProduct.OrderPrice.ToString("c") </span>
                                </div>
                            </div>
                            <div  class="row">
                                <div class="col-lg-12 mt-2">
                                    <span> TOTAL AMOUNT : </span> <span> @Model.OrderProduct.OrderPrice.ToString("c") </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12 align-self-center">
                            <div class="row">
                                <br />
                                <br />
                                <a asp-action="Order" class="btn btn-success form-control"> Approve </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
       </form>